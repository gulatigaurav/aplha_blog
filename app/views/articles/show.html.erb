<h2 align="center">
 Title: <%= @article.title %>
</h2>

<div class="well col-xs-8 col-xs-offset-2">


<% if @article.user %>
<ul class="listing">
  <div class="row text-center">
    <div class="col-md-4 col-md-offset-4">
     <li> Created by:</li>
      <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
       <li class="article-title"
           <%= link_to @article.user.username, user_path(@article.user) %>
      </li>
      <li><small>  <%= pluralize( @article.user.articles.count , "article") if @article.user.articles %>  </small></li>
    </div>
  </div>
</ul>
<% end %>


<h4 class="center desc"> <strong> Description: </strong>  </h4>
<hr>
<%=  simple_format(@article.description) %>

  <% if @article.categories.any? %>

  <p> Categories:  <%= render @article.categories %>

  <% end %>



  <div class="article-actions">
   <% if logged_in? && (current_user == @article.user || current_user.admin? ) %>
  <%= link_to "Edit this article" , edit_article_path(@article),class: "btn btn-primary btn-xs" %>
  <%= link_to "Delete this Article" , article_path(@article), method: :delete,data: {confirm: "Are you sure?"} ,class: "btn btn-danger btn-xs" %>
  <% else %>
   <%= link_to "View all Articles" , articles_path,class: "btn btn-success btn-xs" %>
   <% end %>
  </div>
</div>

<!-- start of comment forms -->
<%= render 'comments/comment-form' %>
<!-- end of comment forms  -->

<!-- start of comments-->

<h3 class="text-center">All Comments</h3>
<% @article.comments.each do |comment| %>
<div class="row">
  <div class="col-md-5 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= comment.content %>
      </div>
    </div>
  </div>
</div>
<% end %>
<!-- end of comments-->
