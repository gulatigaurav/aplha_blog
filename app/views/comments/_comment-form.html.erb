<div class="row">
  <div class="col-md-6 col-md-offset-3">

<% if logged_in? %>
  <%= form_for @comment , url: '#' do |f| %>
    <div class="form-group">
     <!-- <%= f.label :content %> -->
     <%= f.text_area :content,class: "form-control",placeholder: 'Feel Free to Comment' %>
    </div>
    <%= f.submit 'Post Comment', class: "btn btn-primary" %>
  <% end %>
<% end %>
</div>
</div>
